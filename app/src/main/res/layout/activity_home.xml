<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:id="@+id/rlActionBar"
        android:layout_width="match_parent"
        android:paddingVertical="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtHEading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Metric Converter"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imgSetting"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtHEading"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="15dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_baseline_settings_24"
            app:tint="@color/purple_700" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_below="@id/rlActionBar"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/purple_500"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:text="Convert From"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/purple_500"
                    android:background="@color/white"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/llInput"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etLength"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="input here"
                    android:text="1"
                    android:padding="7dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/purple_500" />

                <Spinner
                    android:id="@+id/spinnerLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnConvert"
                android:layout_width="wrap_content"
                android:layout_below="@+id/llInput"
                android:text="CONVERT"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlConvertTo"
        android:layout_width="match_parent"
        android:layout_below="@id/rlContent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/purple_500"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:text="Convert To"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/purple_500"
                    android:background="@color/white"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@+id/btnConvert"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/llFirst"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtFirst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingHorizontal="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_edittext"
                            android:paddingVertical="7dp"
                            android:maxLength="10"
                            android:textColor="@color/purple_500"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txtFirstSuffix"
                            android:layout_width="match_parent"
                            android:text="Meter"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llSecond"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtSecond"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:maxLength="10"
                            android:paddingHorizontal="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_edittext"
                            android:text=""
                            android:paddingVertical="7dp"
                            android:textColor="@color/purple_500"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txtSecondSuffix"
                            android:layout_width="match_parent"
                            android:text="KiloMeter"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llThird"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtThird"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:maxLength="10"
                            android:paddingHorizontal="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_edittext"
                            android:paddingVertical="7dp"
                            android:textColor="@color/purple_500"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txtThirdSuffix"
                            android:layout_width="match_parent"
                            android:text="Miles"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFourth"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtFourth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:maxLength="10"
                            android:paddingHorizontal="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_edittext"

                            android:paddingVertical="7dp"
                            android:textColor="@color/purple_500"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txtFourthSuffix"
                            android:layout_width="match_parent"
                            android:text="Inches"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llFifth"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtFifth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:maxLength="10"
                            android:paddingHorizontal="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_edittext"
                            android:paddingVertical="7dp"
                            android:textColor="@color/purple_500"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txtFifthSuffix"
                            android:layout_width="match_parent"
                            android:text="Feet"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
